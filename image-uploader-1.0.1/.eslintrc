{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "airbnb",
  "sourceType": "script",
  "rules": {
    "arrow-spacing": 2,
    "id-length": [2, {"exceptions": ["$", "_", "L", "v", "w", "h"]}],
    "max-len": [2, 120, 4, {"ignoreUrls": true}],
    "no-multiple-empty-lines": [2, {"max": 1}],
    "object-curly-spacing": [2, "always"],
    "strict": [0, "safe"],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "modules": false,
  },
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
  },
  "root": true
}